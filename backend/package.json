{
  "name": "yaarxiv-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src -e ts,tsx --exec ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "serve": "node out/index.js",
    "build-ts": "tsc && tscpaths -p tsconfig.json -s ./src -o ./out",
    "build": "npm run lint && npm run build-ts && npm run copy-static-assets",
    "start": "npm run serve",
    "copy-static-assets": "ts-node scripts/copyStaticAssets.ts",
    "compile-schemas": "json2ts -i schemas -o types",
    "test": "cross-env NODE_ENV=test jest --verbose"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "fastify": "^3.1.1",
    "fastify-typeorm-plugin": "^2.1.2",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.0",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.5.0",
    "jest": "^26.1.0",
    "json-schema-to-typescript": "^9.1.1",
    "nodemon": "^2.0.4",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "0.0.9",
    "typescript": "^3.9.7"
  }
}
