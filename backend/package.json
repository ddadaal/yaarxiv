    "fs-extra": "^10.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0",
