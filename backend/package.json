{
  "name": "yaarxiv-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src --watch ../api -e ts,tsx --exec ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "serve": "cross-env NODE_ENV=production node out/src/index.js",
    "build-ts": "ts-node scripts/cleanOut.ts && cross-env NODE_ENV=production tsc && tscpaths -p tsconfig.json -s ./src -o ./out",
    "build": "npm run lint && npm run build-ts && npm run copy-static-assets",
    "start": "npm run dev",
    "copy-static-assets": "ts-node scripts/copyStaticAssets.ts",
    "test": "cross-env NODE_ENV=test jest --verbose",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "generateConfig": "node-config-ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fastify": "^3.2.1",
    "fastify-file-upload": "^3.0.0",
    "fastify-jwt": "^2.1.3",
    "fastify-swagger": "^3.3.0",
    "fastify-typeorm-plugin": "^2.1.2",
    "node-config-ts": "^3.0.4",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.0",
    "typeorm": "^0.2.25",
    "yaarxiv-api": "file:../api"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/pino": "^6.3.0",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "pino-pretty": "^4.1.0",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "0.0.9",
    "typescript": "^4.0.2"
  }
}
